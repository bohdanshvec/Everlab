<% currently_at %>

<%= form_with(url: admin_products_path, method: 'get') do |f| %>

  <div class='row mb-3'>
    <div class='offset-sm-2 col-sm-10'>
      <div class='form-check'>
        <%= f.check_box :sort_by_created_at_asc, { class: 'form-check-input' }, '.order(created_at: :asc)', nil %>
        <%= f.label :sort_by_created_at, 'Sort by Created At ASC', class: 'form-check-label' %>
      </div>

      <div class='form-check'>
        <%= f.check_box :sort_by_created_at_asc, { class: 'form-check-input' }, '.order(created_at: :desc)', nil %>
        <%= f.label :sort_by_created_at, 'Sort by Created At DESC', class: 'form-check-label' %>
      </div>

      <div class='form-check'>
        <%= f.check_box :sort_by_updated_at_asc, { class: 'form-check-input' }, '.order(updated_at: :asc)', nil %>
        <%= f.label :sort_by_updated_at, 'Sort by Updated At ASC', class: 'form-check-label' %>
      </div>

      <div class='form-check'>
        <%= f.check_box :sort_by_updated_at_asc, { class: 'form-check-input' }, '.order(updated_at: :desc)', nil %>
        <%= f.label :sort_by_created_at, 'Sort by Updated At DESC', class: 'form-check-label' %>
      </div>

      <div class='form-check'>
        <%= f.check_box :first_5, { class: 'form-check-input' }, '.first(5)', nil %>
        <%= f.label :first_5, 'First 5', class: 'form-check-label' %>
      </div>

      <div class='form-check'>
        <%= f.check_box :last_5, { class: 'form-check-input' }, '.last(5)', nil %>
        <%= f.label :last_5, 'Last 5', class: 'form-check-label' %>
      </div>

    </div>
  </div>

  <div>
    <%= f.submit 'Sort', class: "btn btn-primary"  %>
  </div>
<% end %>

<h1>Products</h1>

<% if admin_signed_in? %>
  <%= current_admin.email %><br>
<% end %>

<ul>
  <%= render @products %>
</ul>